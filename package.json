{
  "name": "isogguild",
  "private": true,
  "dependencies": {
    "@rails/webpacker": "^3.2.1",
    "babel-eslint": "^8.2.1",
    "babel-polyfill": "^6.26.0",
    "bulma": "^0.6.2",
    "turbolinks": "^5.1.1"
  },
  "devDependencies": {
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.6.0",
    "lint-staged": "^6.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.10.2",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "webpack-dev-server": "^2.11.1"
  },
  "scripts": {
    "lint-staged": "$(yarn bin)/lint-staged"
  },
  "lint-staged": {
    "config/webpack/**/*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "app/javascript/**/*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "app/javascript/**/*.css": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ]
}
