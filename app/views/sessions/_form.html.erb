<%= form_for :session, url: session_path do |form| %>
  <div class="field">
    <div class="control">
    <%= form.label :email, class: 'label app-label' %>
    <%= form.text_field :email, type: 'email', class: 'input',placeholder: 'email' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
    <%= form.label :password, class: 'label app-label'  %>
    <%= form.password_field :password, class: 'input',  placeholder: 'password' %>
    </div>
  </div>

  <%= form.submit 'Login', class: 'button is-block is-info is-large is-outlined' %>
<% end %>
