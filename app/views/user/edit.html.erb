
  <div class="sandbox">
    <div class="tile is-ancestor">
      <div class="tile is-parent">
        <article class="tile is-child notification is-white">
          <div class="content">
         <h3 class="is-3"> Update your password </h3>
            <%= form_for(@user) do |f| %>
              <div class="field">
                <div class="control">
                  <%= f.label :password, class: 'label app-label'  %>
                  <%= f.password_field :password, class: 'input',  placeholder: 'password' %>
                </div>
              </div>
              <%= f.submit 'Update', class: 'button is-block is-info is-large is-outlined' %>
            <% end %>
          </div>
        </article>
      </div>
    </div>
  </div>
